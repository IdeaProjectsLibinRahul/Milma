<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ReviewProductTotal">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReviewTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewPrice">
        <item name="android:textColor">#0a8b0a</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogDivider">
        <item name="android:background">#33000000</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ReviewButtons">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SortField">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="SortContainer">
        <item name="android:padding">8dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ReviewText">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HistoryText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
